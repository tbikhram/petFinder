<!--SURVEY-->
<div class="container" id="newPet">
	<div class="row">
		<div class="col-md-11">
			<div class="pull-right">
			<form action="/petId/create" method="POST">
				
				<div class="form-group">
				<h2>Tell Us Some Details:</h2>
				  <label for="usr">Pet Name (If Tag):</label>
				  <input type="text" class="form-control" id="usr" placeholder="Spot" name="petName">
				</div>

				<div class="form-group">
				  <label for="usr">Breed (If Tag):</label>
				  <input type="text" class="form-control" id="breed" placeholder="French Bulldog" name="breed">
				</div>

			<!--UPLOAD IMAGE-->
				  <label for="usr">Choose an Image:</label>
				  <input type="file" name="petPic" accept="image/*">
				  <!--<input type="submit">-->
				

				<label for="usr">The Animal is a:</label>
				<div class="checkbox-inline">
				  
				  <label><input type="checkbox" value="1" name="animaltype">Dog</label>
				</div>

				<div class="checkbox-inline">
				  <label><input type="checkbox" value="0" name="animaltype">Cat</label>
				</div></br>

				<!--found/lost input-->
				<label for="usr">I :</label>
				<div class="checkbox-inline">
				  
				  <label><input type="checkbox" value="1" name="foundLost">Found a Pet</label>
				</div>

				<div class="checkbox-inline">
				  <label><input type="checkbox" value="0" name="foundLost">Lost a Pet</label>
				</div>

				<div class="form-group">
				  <label for="usr">Zipcode Found:</label>
				  <input type="text" class="form-control" id="usr" name="zipcode_pet" placeholder="90024">
				</div>

				<!--comment box-->
				<div class="form-group">
				  <label for="comment">Comment:</label>
				  <textarea class="form-control" rows="5" id="comment" name="comments" placeholder="Pet condition"></textarea>
				</div>
				
			
				<div class="btn-group" >

			  		<button type="submit" class="btn btn-primary" >Post Pet</button>

				</div>

				</form>
			</div>
		</div>
	</div>
</div>

